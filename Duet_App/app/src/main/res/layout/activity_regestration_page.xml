<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="32dp"
    android:background="@drawable/wall"
    tools:context=".regestration_page">

    <TextView
        android:id="@+id/textViewHeading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome to My Dating App"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:layout_marginBottom="24dp"/>

    <EditText
        android:id="@+id/editTextName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter your name"
        android:textColorHint="@android:color/darker_gray"
        android:backgroundTint="@color/mid2_color"
        android:layout_marginBottom="16dp"/>

    <EditText
        android:id="@+id/editTextDOB"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter your date of birth (YYYY-MM-DD)"
        android:textColorHint="@android:color/darker_gray"
        android:backgroundTint="@color/mid2_color"
        android:layout_marginBottom="16dp"/>

    <TextView
        android:id="@+id/textView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="GENDER:"
        tools:ignore="DuplicateIds" />

    <RadioGroup
        android:id="@+id/radioGroupGender11"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/radioButtonMale11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:buttonTint="@color/mid2_color"
            android:text="Male"
            android:textColor="@android:color/black" />

        <RadioButton
            android:id="@+id/radioButtonFemale11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:buttonTint="@color/mid2_color"
            android:text="Female"
            android:textColor="@android:color/black" />

    </RadioGroup>
    ////////////////////////////////////////////////////////////////////////
    <TextView
        android:id="@+id/textView21"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Do you drink or smoke please be honest? " />

    <RadioGroup
        android:id="@+id/radioGroupGender12"
        android:layout_width="346dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="0dp"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/radioButtonMale1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:buttonTint="@color/mid2_color"
            android:text="Both"
            android:textColor="@android:color/black" />

        <RadioButton
            android:id="@+id/radioButtonFemale1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:buttonTint="@color/mid2_color"
            android:text="Just Drink"
            android:textColor="@android:color/black" />

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </RadioGroup>

    <RadioGroup
        android:id="@+id/radioGroupGender1"
        android:layout_width="346dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:layout_marginTop="0dp"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/radioButtonMale2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:buttonTint="@color/mid2_color"
            android:text="Other"
            android:textColor="@android:color/black" />

        <RadioButton
            android:id="@+id/radioButtonFemale2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:buttonTint="@color/mid2_color"
            android:text="Just Smoke"
            android:textColor="@android:color/black" />

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </RadioGroup>
    ///////////////////////////////////////////////////////////////////
    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Are you willing to go on dates?
" />

    <RadioGroup
        android:id="@+id/radioGroupGender2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="0dp"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/radioButtonMale3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:buttonTint="@color/mid2_color"
            android:text="Yes"
            android:textColor="@android:color/black" />

        <RadioButton
            android:id="@+id/radioButtonFemale3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:buttonTint="@color/mid2_color"
            android:text="No"
            android:textColor="@android:color/black" />

    </RadioGroup>

    ////////////////////////////////////////////////////////////////////////

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Marital status"
        />

    <RadioGroup
        android:id="@+id/radioGroupGender3"
        android:layout_width="346dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="0dp"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/radioButtonMale4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:buttonTint="@color/mid2_color"
            android:text="Single"
            android:textColor="@android:color/black" />

        <RadioButton
            android:id="@+id/radioButtonFemale4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:buttonTint="@color/mid2_color"
            android:text="Divorced"
            android:textColor="@android:color/black" />

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </RadioGroup>

    <RadioGroup
        android:id="@+id/radioGroupGender"
        android:layout_width="346dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:layout_marginTop="0dp"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/radioButtonMale"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:buttonTint="@color/mid2_color"
            android:text="Other"
            android:textColor="@android:color/black" />

        <RadioButton
            android:id="@+id/radioButtonFemale"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:buttonTint="@color/mid2_color"
            android:text="Widowed"
            android:textColor="@android:color/black" />

    </RadioGroup>
    ///////////////////////////////////////////////////////////////////

    <TextView
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="State you live in" />


    <Spinner
        android:id="@+id/my_dropdown"
        android:layout_width="226dp"
        android:layout_height="wrap_content"
        android:spinnerMode="dropdown"></Spinner>



    <TextView
        android:id="@+id/textViewResult"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="18sp"
        android:textColor="@android:color/black"/>

    <EditText
        android:id="@+id/editTextText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="text"
        android:text="Height" />

    <EditText
        android:id="@+id/editTextText2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="text"
        android:text="Weight" />


    <TextView
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Give a brief description of yourself" />

    <RelativeLayout
        android:layout_width="387dp"
        android:layout_height="199dp">

        <androidx.cardview.widget.CardView
            android:id="@+id/text_box1"
            app:cardCornerRadius="16dp"
            app:cardUseCompatPadding="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true">

            <EditText
                android:id="@+id/text_input1"
                android:layout_width="378dp"
                android:layout_height="138dp"
                android:background="@drawable/ic_launcher_background"
                android:hint="Type here......"
                android:padding="16dp" />
        </androidx.cardview.widget.CardView>

    </RelativeLayout>

    <TextView
        android:id="@+id/textView6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Why you think weâ€™d be a good couple?" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="123dp">

        <androidx.cardview.widget.CardView
            android:id="@+id/text_box"
            app:cardCornerRadius="16dp"
            app:cardUseCompatPadding="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true">

            <EditText
                android:id="@+id/text_input"
                android:layout_width="391dp"
                android:layout_height="95dp"
                android:background="@drawable/ic_launcher_background"
                android:hint="Enter your text here"
                android:padding="16dp" />
        </androidx.cardview.widget.CardView>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="371dp"
        android:layout_height="267dp">

        <ImageView
            android:id="@+id/photo_box"
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:background="@drawable/ic_launcher_background" />

        <Button
            android:id="@+id/select_photo_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/photo_box"
            android:layout_marginTop="5dp"
            android:text="Select Photo"
            android:textColorHint="#FF0000"
            android:textColorLink="#F30000"
            app:rippleColor="#FF0000" />

    </RelativeLayout>



</LinearLayout>